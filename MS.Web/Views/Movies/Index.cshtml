@*@model IEnumerable<MS.Models.Movie>*@
@model PagedList.IPagedList<MS.Models.Movie>
@{
    ViewBag.Title = "Index";
}
@using PagedList.Mvc; 
@using PagedList; 
<h2>Movies</h2>

<table class="table table-striped table-bordered table-condensed">
    <thead class="thead-inverse">
        <tr class="bg-primary">
            <th></th>
            <th></th>
            <th>ID</th>
            <th>
                Title @*@Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                Director@*@Html.DisplayNameFor(model => model.Director)*@
            </th>
            <th>
                Release Date@*@Html.DisplayNameFor(model => model.ReleaseDate)*@
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) 
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ID }) 

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Director)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
    </tr>
}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6">
                @Html.PagedListPager(Model, pagePos => Url.Action("Index", new { pagePos }), PagedListRenderOptions.MinimalWithPageCountText)

                @*<span id="pageCount">
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    </span>*@
            </td>
        </tr>
    </tfoot>
</table>

<div>
    @Html.ActionLink("Add New", "Create", "Movies", null, new { @class = "btn btn-primary btn-md add-button" }) 
</div>

<div>
    @Html.ActionLink("Export to file", "ToJson", "Movies", null, new { @class = "btn btn-primary btn-md json-button" })
</div>

